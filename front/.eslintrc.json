{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "avoid",
				"bracketSpacing": true,
				"endOfLine": "auto",
				"printWidth": 80,
				"semi": true,
				"tabWidth": 2,
				"trailingComma": "all",
				"useTabs": false
			}
		]
	}
}
